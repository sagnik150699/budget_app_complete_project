# Podfile â€” Flutter + iOS 13 (ASCII quotes only)

platform :ios, '13.0'

# ----------  BOOTSTRAP FLUTTER HELPERS  ----------
flutter_root = File.expand_path(File.join(__dir__, '..', '..'))
require File.expand_path(File.join(
  'packages', 'flutter_tools', 'bin', 'podhelper'
), flutter_root)
# -----------------------------------------------

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  flutter_additional_ios_build_settings(installer)

  # Force every native target to iOS 13
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |c|
      c.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end